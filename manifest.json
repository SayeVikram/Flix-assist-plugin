{
  "manifest_version": 3,
  "name": "Flix Assist",
  "version": "1.0.0",
  "description": "Find Netflix content by country and auto-connect to Surfshark VPN",
  "permissions": [
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://unogs-unogs-v1.p.rapidapi.com/*"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Flix Assist",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "externally_connectable": {
    "matches": ["<all_urls>"]
  }
}
